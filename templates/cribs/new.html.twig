{% extends 'base.html.twig' %}
{% block title %}cribs{% endblock %}
{% block body %}
    {% block heading %}<h1>New</h1>{% endblock %}
    <a href="{{ path('index') }}">back</a>
    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.project) }}
    {{ form_row(form.date) }}

    <h3>Content</h3>
    <ul class="cribContents" data-prototype="{{ form_widget(form.cribContent.vars.prototype)|e('html_attr') }}">
        {% for cribContent in form.cribContent %}
            <li>
                {{ form_row(cribContent.language) }}
                {{ form_row(cribContent.code) }}
                {{ form_row(cribContent.comment) }}
            </li>
        {% endfor %}
    </ul>
    {{ form_end(form) }}
{% endblock %}
