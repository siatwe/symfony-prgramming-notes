{% extends 'base.html.twig' %}
{% block title %}cribs{% endblock %}
{% block body %}
    {% block heading %}<h1>NEW/EDIT</h1>{% endblock %}
    <div class="Form">
        <a class="Link" href="{{ path('index') }}">back</a>
        {{ form_start(form) }}
        {{ form_row(form.submit_top) }}
        {{ form_row(form.title) }}
        {{ form_row(form.project) }}
        {{ form_row(form.date) }}

        <h3>Content</h3>
        <ul class="cribContents" data-prototype="{{ form_widget(form.cribContent.vars.prototype)|e('html_attr') }}">
            {% for cribContent in form.cribContent %}
                <li>
                    {{ form_row(cribContent.language) }}
                    {{ form_row(cribContent.comment) }}
                    {{ form_row(cribContent.code) }}
                </li>
            {% endfor %}
        </ul>
        {{ form_row(form.submit) }}
        {{ form_end(form) }}
        <a class="Link" href="{{ path('index') }}">back</a>
    </div>
{% endblock %}
